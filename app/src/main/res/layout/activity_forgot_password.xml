<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/inverse"
        android:padding="10sp"
        android:layout_marginBottom="50dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Step 1 of 2 (Security Question)"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer the security question (if set) to reset your password"
            android:textColor="@color/warning" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" android:background="@drawable/borders">
        <TextView
            android:id="@+id/tvbruhims"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BRUHIMS Number"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etbruhims"
            android:padding="10dp"
            android:background="@drawable/borders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BN00000000"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tvsecurity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Question 1"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spsec1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borders"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etsecurityanswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borders"
            android:hint="your answer"
            android:lines="2"
            android:padding="10dp"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" android:background="@drawable/borders">

        <TextView
            android:id="@+id/tvsecurity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Question 2"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spsec2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borders"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etsecurityanswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borders"
            android:hint="your answer"
            android:lines="2"
            android:padding="10dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/primary"

            android:onClick="button_click"
            android:text="SUBMIT"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/warning"

            android:onClick="button_click"
            android:text="Cancel"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>