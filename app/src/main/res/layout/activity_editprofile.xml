<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20sp"
    android:paddingTop="50sp"
    android:paddingRight="20sp"
    android:paddingBottom="50sp"
    tools:context=".editprofile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etregno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_input"
            android:editable="false"
            android:ems="10"
            android:enabled="true"
            android:hint="BRUHIMS NO"
            android:inputType="text"
            android:padding="10sp" />

        <EditText
            android:id="@+id/etregname"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Full Name"
            android:inputType="textMultiLine"
            android:padding="10sp" />

        <EditText
            android:id="@+id/etregic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:hint="IC-Number/Passport"
            android:inputType="textPersonName"
            android:padding="10sp" />

        <EditText
            android:id="@+id/etregemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:hint="email@domain.com"
            android:inputType="textEmailAddress"
            android:padding="10sp" />

        <EditText
            android:id="@+id/etregphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="10sp" />

        <Spinner
            android:id="@+id/spreggender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_input"
            android:padding="10sp" />

        <EditText
            android:id="@+id/etdob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_input"
            android:clickable="true"
            android:editable="false"
            android:ems="10"

            android:focusable="false"
            android:hint="dd/MM/yyyy"
            android:inputType="phone"
            android:padding="10sp" />

        <EditText
            android:id="@+id/etaddress"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:hint="Address"
            android:inputType="textLongMessage"
            android:lines="4"
            android:padding="10sp"
            android:singleLine="false" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            app:passwordToggleEnabled="true"
            android:background="@drawable/borders"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="15"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnregisterclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@color/primary"
            android:onClick="validate_client"
            android:text="Update"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btncancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@color/warning"
            android:text="Cancel"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>